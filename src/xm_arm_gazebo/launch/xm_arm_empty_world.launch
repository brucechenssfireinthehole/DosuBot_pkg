<launch>

  <arg name="debug" default="false" />
  <arg name="gui" default="true" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find xm_arm_gazebo)/world/xm_arm_gazebo_with_table.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="false" />
    <arg name="use_sim_time" value="true" />
    <arg name="headless" value="false" />
  </include>

  <param name="robot_description" command="$(find xacro)/xacro.py $(find xm_arm_description)/urdf/xmbot_with_arm.xacro" />

  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -x 0 -y 0 -z 0 -model xmbot -param robot_description" respawn="false" output="screen" />

</launch>
